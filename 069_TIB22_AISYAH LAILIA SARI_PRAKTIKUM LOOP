#include <iostream>
using namespace std;
int main (){
	int total = 0;
	int count = 0;
	int number;
	
	cout << "masukkan angka ";
	cin >> number;
	while (number != -1){
		
		count++;
		total = total + number;
		cout << "masukkan angka ";
		cin >> number; 
	}
	
	cout<< "The number of data read is " <<count<< endl;
	cout<< "The sum of the numbers entered is " << total;

	cin.get();
	return 0;
	
}
